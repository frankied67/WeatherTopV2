  <table class="ui table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Temperature <i class=" red temperature high icon"></i></th>
        <th>Wind Speed <i class=" green wind icon"></i></th>
        <th>Wind Direction <i class="compass icon"></i></th>
        <th>Pressure <i class="blue centos icon"></i></th>
        <th>Date <i class="clock outline icon"></i></th>
      </tr>
    </thead>
    <tbody>
      {{#each station.readings}}
        <tr>
          <td>
            {{code}}
          </td>
          <td>
            {{temperature}} C
          </td>
          <td>
            {{windSpeed}}
            {{station.windBft}}
          </td>
          <td>
            {{windDirection}}
          </td>
          <td>
            {{pressure}}
          </td>
          <td>
            {{date}}
          </td>
          <td>
           <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button">
              <i class="icon trash"></i>
            </a> 
          </td>
        </tr>
      {{/each}}
      </tbody>
  </table>
